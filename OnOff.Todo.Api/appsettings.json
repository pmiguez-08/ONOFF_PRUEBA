{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // Esta sección guarda la configuración para crear y validar los tokens JWT
  "Jwt": {
    // Esta es una cadena secreta que se usa para firmar el token
    // En un sistema real debe ser más larga y guardarse en un lugar seguro
    "Key": "EstaEsUnaClaveSuperSecretaParaLaPruebaOnOff123!",
    // Emisor del token, normalmente el dominio o nombre de la API
    "Issuer": "OnOff.Todo.Api",
    // Audiencia del token, normalmente quién va a usar el token
    "Audience": "OnOff.Todo.Web",
    // Minutos que el token será válido antes de expirar
    "ExpiresInMinutes": 60
  }
}

